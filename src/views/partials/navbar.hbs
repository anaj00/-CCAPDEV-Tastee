<div class="overlay" style="display: none;" id="overlay"></div>
<div class="edit-profile" style="display: none;" id="edit-profile">
    <div class="exit" onclick="closeEdit()">X</div>
    <div class="edit-image">
        <img src="../static/images/{{user.pfp}}" class="edit-image-circle" id="user-pic-id"></img>
        <button type="submit" class="btn" onclick="editPFP()">Edit profile picture</button>
    </div>
    <div class="edit-right">
        <form>
            <div class="edit-input">
                <label>Bio</label><br>
                <textarea type="text" id="edit-bio" ></textarea>
            </div>
            <div class="btndv">
                <button type="submit" class="btn" onclick="editBio()">Save bio</button>
            </div>
        </form>
    </div>
</div>

{{!-- Edit PFP --}}
<div class="edit-photo" id="edit-pfp" style="display: none;">
    <div class="exit" onclick="closeEditPFP()">X</div>
    <form id="profilePictureForm" enctype="multipart/form-data" class="inputPicture">
        <input type="file" id="profilePictureInput" accept="image/*" class="inputPicture" name="image">
        <button type="submit" class="edit-image-text" onclick="uploadPFP()">Save changes</button>
    </form>
</div>

