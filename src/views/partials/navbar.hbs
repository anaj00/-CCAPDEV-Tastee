        <div class="sub-menu-wrap" id="subMenu">
            <div class="sub-menu">
                <div class="user-info">
                    <img src="../static/images/{{user.pfp}}" class="user-pic" id="user-pic-id">
                    <h2 id="user-menu-intro">{{user.username}}</h2>
                </div>
                <hr>

                <a id="user-page-link" href="https://tastee-47ty.onrender.com/user" class="sub-menu-link">
